		"private_zone": {
			"pages": [
				{ 
					"name": "home_private", 
					"title": "{{userFullName}}, welcome to Meteor Kitchen!",
					"components": [
						{
							"name": "dashboard",
							"type": "markdown",
							"source_file": "files/dashboard.md"
						}
					]
				},


				{
					"name": "applications",
					"components": [
						{
							"name": "view",
							"type": "dataview",
							"title": "My applications",
							"text_if_empty": "No applications here",
							"query": {
								"name": "applications",
								"collection": "applications",
								"filter": {},
								"options": { "sort": { "name": 1} }
							},
							"insert_route": "applications.insert",

							"edit_route": "applications.edit",
							"edit_route_params": [
								{ "name": "applicationId", "value": "this._id" }
							],

							"details_route": "applications.details",
							"details_route_params": [
								{ "name": "applicationId", "value": "this._id" },
								{ "name": "objectId", "value": null },
								{ "name": "propertyName", "value": null}
							]
						}
					],
					"pages": [
						{
							"name": "insert",
							"components": [
								{
									"name": "insert_form",
									"type": "form",
									"mode": "insert",
									"title": "New application",
									"query": {
										"name": "applications_empty",
										"collection": "applications",
										"filter": {"_id": null}
									},
									"submit_route": "applications.details",
									"submit_route_params": [
										{ "name": "applicationId", "value": "newId" },
										{ "name": "objectId", "value": null },
										{ "name": "propertyName", "value": null }
									],
									"cancel_route": "applications"
								}
							]
						},

						{
							"name": "edit",
							"route_params": ["applicationId"],
							"components": [
								{
									"name": "edit_form",
									"type": "form",
									"mode": "update",
									"title": "Edit",
									"submit_route": "applications",
									"cancel_route": "applications",
									"query": {
										"name": "application",
										"collection": "applications",
										"filter": { "_id": ":applicationId" }
									}
								}
							]
						},

						{
							"name": "details",
							"template": "page_empty",
							"title": "{{application.name}}",
							"class": "app-editor-container",
							"route_params": [ "applicationId", "objectId", "propertyName" ],
							"query": {
								"name": "application",
								"collection": "applications",
								"find_one": true,
								"filter": { "_id": ":applicationId" }
							},

							"pages": [
								{
									"name" : "form_view",
									"class": "app-editor",

									"query": {
										"name": "application",
										"collection": "applications",
										"find_one": true,
										"filter": { "_id": ":applicationId" }
									},

									"queries": [
										{
											"name": "metadata",
											"collection": "metadata",
											"find_one": true,
											"options": { "sort": { "version": -1} }
										}
									],

									"components": [
										{
											"name": "content_row",
											"type": "div",
											"class": "row",
											"components": [
												{
													"name": "left_col",
													"type": "div",
													"class": "col-md-4",
													"components": [
														{
															"name": "tree",
															"type": "object_tree",
															"query": {
																"name": "application",
																"collection": "applications",
																"find_one": true,
																"filter": { "_id": ":applicationId" }
															},
															"properties": {
																"root_id_field": "_id",
																"data_field": "data",
																"metadata_query_name": "metadata",
																"metadata_field": "data",

																"select_object_route": "applications.details.form_view",
																"select_object_route_params": [
																	{ "name": "applicationId", "value": "this.rootId" },
																	{ "name": "objectId", "value": "objectId" },
																	{ "name": "propertyName", "value": null }
																],

																"select_array_route": "applications.details.form_view",
																"select_array_route_params": [
																	{ "name": "applicationId", "value": "this.rootId" },
																	{ "name": "objectId", "value": "objectId" },
																	{ "name": "propertyName", "value": "propertyName" }
																]
															}
														}
													]
												},
												{
													"name": "right_col",
													"type": "div",
													"class": "col-md-8",
													"components": [
														{
															"name": "form",
															"type": "object_editor",
															"query": {
																"name": "application",
																"collection": "applications",
																"find_one": true,
																"filter": { "_id": ":applicationId" }
															},
															"properties": {
																"data_field": "data",
																"metadata_query_name": "metadata",
																"metadata_field": "data",
																"object_id": ":objectId",
																"property_name": ":propertyName",
																"select_object_route": "applications.details.form_view",
																"select_object_route_params": [
																	{ "name": "applicationId", "value": "this.rootId" },
																	{ "name": "objectId", "value": "this.objectId" },
																	{ "name": "propertyName", "value": null }
																]
															}
														}
													]
												}
											]
										}
									]

								},

								{
									"name" : "json_view",
									"class": "app-editor",
									"text": "",

									"query": {
										"name": "application",
										"collection": "applications",
										"find_one": true,
										"filter": { "_id": ":applicationId" }
									},

									"queries": [
										{
											"name": "metadata",
											"collection": "metadata",
											"find_one": true,
											"options": { "sort": { "version": -1 } }
										}
									],

									"components": [
										{
											"name": "editor",
											"type": "custom_component",
											"custom_template": "files/json-editor"
										}
									]
								}
							],

							"components": [
								{
									"name": "build_info",
									"dest_selector": "#title_row",
									"dest_position": "after",
									"type": "div",
									"class": "alert alert-info alert-dismissible build-info",
									"text": "<button type=\"button\" class=\"close toggle-build-info\"><span aria-hidden=\"true\">&times;</span><span class=\"sr-only\">Close</span></button>",
									"components": [
										{
											"name": "text",
											"type": "markdown",
											"source_file": "files/build_info.md"
										}
									]
								}
							],

							"menus": [
								{
									"name": "editor_menu",
									"class": "nav nav-pills",
									"dest_selector": "#page_menu",
									"items": [
										{
											"title": "View",
											"items": [
												{
													"title": "Tree/Form",
													"route": "applications.details.form_view",
													"route_params": [
														{ "name": "applicationId", "value": "application._id" },
														{ "name": "objectId", "value": null },
														{ "name": "propertyName", "value": null }
													]
												},
												{
													"title": "Source (JSON)",
													"route": "applications.details.json_view",
													"route_params": [
														{ "name": "applicationId", "value": "application._id" },
														{ "name": "objectId", "value": null },
														{ "name": "propertyName", "value": null }
													]
												}
											]
										},
										{
											"title": "Build",
											"url": "#",
											"class": "toggle-build-info"
										},
										{
											"title": "Download",
											"url": "{{urlFor 'api.getapp.json' applicationId=application._id}}",
											"target": "_blank"
										}
									]
								}
							],

							"events_code": "
								\"click .toggle-build-info\": function(e, t) {
									$(\".alert.build-info\").toggle();
								}
							"
						}
					]
				},

				{
					"name": "user_settings",
					"pages": [
						{ "name": "change_pass", "template": "change_pass.html" }
					],

					"menus": [
						{
							"name": "side_menu",
							"class": "nav nav-stacked nav-pills",
							"items": [
								{ "title": "Change password", "route": "user_settings.change_pass" }
							]
						}
					]
				},

				{ "name": "logout", "template": "logout.html", "action_code": "App.logout();" }
			],

			"menus": [
				{
					"name": "left_menu",
					"class": "nav navbar-nav",
					"dest_selector": "#menu",
					"items": [
						{ "title": "Home", "route": "home_private" },
						{ "title": "My applications", "route": "applications" }
					]
				},

				{
					"name": "right_menu",
					"class": "nav navbar-nav navbar-right",
					"dest_selector": "#menu",
					"items": [
						{ 
							"title": "{{userEmail}}",
							"items": [
								{ "title": "Settings", "route": "user_settings" },
								{ "title": "Logout", "route": "logout" }
							]
						}
					]
				}
			]
		},

