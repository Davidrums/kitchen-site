{
	"application": {
		"title": "Meteor Kitchen",
		"meta_title": "Meteor Generator",
		"meta_description": "Meteor application generator",
		"template": "bootstrap",
		"theme": "bootswatch-amelia",
		"footer_text": "Meteor Kitchen &copy; 2014 Petar KorponaiÄ‡ All Rights Reserved",

		"collections": [
			{
				"name": "metadata"
			},
			{
				"name": "applications",
				"owner_field": "ownerId",
				"read_owner_only": true,
				"write_owner_only": true,
				"fields": [
					{ "name": "name", "title": "Application name", "type": "string", "required": true },
					{
						"name": "withUserAccounts",
						"title": "User accounts?",
						"type": "integer",
						"input": "radio",
						"input_items": [
							{ "title": "No user account system", "value": 0 },
							{ "title": "With user account system", "value": 1 }
						],
						"show_in_dataview": false,
						"show_in_insert_form": true,
						"show_in_update_form": false,
						"show_in_read_only_form": false
					}
				],
				"before_insert_source_file": "files/applications_before_insert.js"
			}
		],

